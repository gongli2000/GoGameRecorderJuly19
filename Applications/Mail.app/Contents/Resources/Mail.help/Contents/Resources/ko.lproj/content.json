    "searchable-landing-com-apple-Mail-help" : {
      "navigation" : "false",
      "content" : "<div class='apd-topic' id='searchable-landing-com-apple-Mail-help'><div class='subjectids'><a name='searchable-landing-com-apple-Mail-help'><\/a><\/div><h1 class='title topictitle1'>Mail 도움말<\/h1><div class='body conbody'><div class='section'><h2 class='title sectiontitle'>Mail 도움말<\/h2><p class='p'>검색 가능한 주제<\/p><\/div><\/div><\/div>",
      "alternativeName" : "Mail 도움말",
      "name" : "Mail 도움말",
      "class" : "default"
